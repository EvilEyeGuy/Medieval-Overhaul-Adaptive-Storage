<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="MedievalOverhaulAdaptiveStorage.PatchOperation_ToggleSettings">
		<settings>
			<li>MOASF_RemoveDesignator</li>
		</settings>
		<active Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[@Name="DankPyon_LumberStorageBase" or
										 @Name="DankPyon_BrickStorageBase" or
										 @Name="DankPyon_StorageBase"]/designationCategory</xpath>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/DesignationCategoryDef[defName="DankPyon_RusticStorage"]</xpath>
				</li>

			</operations>
		</active>
  </Operation>
</Patch>